    <!--====== NURGLE =====-->
    <!-- Nurgle Ritual Item -->
    <RecipeDef ParentName="BEWH_ChaosRecipeBase">
        <defName>BEWH_MakeNurgleItem</defName>
        <label>make disease filled brew</label>
        <description>Make a disease filled brew.</description>
        <jobString>Making disease filled brew.</jobString>
        <workAmount>7000</workAmount>
        <recipeUsers>
            <li>CraftingSpot</li>
        </recipeUsers>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Silver</li>
                    </thingDefs>
                </filter>
                <count>10</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Steel</li>
                    </thingDefs>
                </filter>
                <count>50</count>
            </li>
            <li>
                <filter>
                    <categories>
                        <li>Corpses</li>
                    </categories>
                    <customSummary>Rotten humanlike corpse</customSummary>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Silver</li>
                <li>Steel</li>
            </thingDefs>
            <categories>
                <li>Corpses</li>
            </categories>
            <disallowedCategories>
                <li>CorpsesMechanoid</li>
                <li>CorpsesAnimal</li>
                <li>CorpsesInsect</li>
            </disallowedCategories>
            <specialFiltersToDisallow>
                <li>AllowFresh</li>
            </specialFiltersToDisallow>
        </fixedIngredientFilter>
        <products>
            <BEWH_NurgleItem>1</BEWH_NurgleItem>
        </products>
        <skillRequirements>
            <Intellectual>4</Intellectual>
            <Cooking>8</Cooking>
            <Crafting>5</Crafting>
        </skillRequirements>
        <workSkill>Crafting</workSkill>
